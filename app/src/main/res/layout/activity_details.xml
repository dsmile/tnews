<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.mdiakonov.tnews.view.DetailsActivity">

    <TextView
        android:id="@+id/content_text"
        android:padding="@dimen/details_text_padding"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="Lorem ipsum. sddas dadwawd. Lorem ipsum. sddas dadwawd. Lorem ipsum. sddas dadwawd. Lorem ipsum. sddas dadwawd" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/error_text"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:visibility="visible"
        tools:text="Load error" />

</FrameLayout>
